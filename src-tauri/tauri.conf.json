{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "EZ Flow",
  "version": "0.1.0",
  "identifier": "com.ezflow.app",
  "build": {
    "beforeBuildCommand": "bun run build",
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "label": "main",
        "title": "EZ Flow",
        "width": 400,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "visible": false
      },
      {
        "label": "recording-indicator",
        "title": "Recording",
        "width": 200,
        "height": 48,
        "resizable": false,
        "decorations": false,
        "alwaysOnTop": true,
        "transparent": true,
        "skipTaskbar": true,
        "visible": false,
        "url": "/indicator"
      },
      {
        "label": "settings",
        "title": "EZ Flow Settings",
        "width": 500,
        "height": 600,
        "resizable": true,
        "visible": false,
        "center": true,
        "url": "/settings"
      },
      {
        "label": "history",
        "title": "Transcription History",
        "width": 600,
        "height": 700,
        "resizable": true,
        "visible": false,
        "center": true,
        "url": "/history"
      },
      {
        "label": "onboarding",
        "title": "Welcome to EZ Flow",
        "width": 600,
        "height": 700,
        "resizable": false,
        "visible": false,
        "center": true,
        "url": "/onboarding"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "shortDescription": "Local speech-to-text transcription",
    "longDescription": "EZ Flow is a local speech-to-text application that transcribes your voice without sending data to the cloud.",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": null,
      "frameworks": [],
      "minimumSystemVersion": "12.0",
      "signingIdentity": null,
      "providerShortName": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0",
          "libasound2"
        ]
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "endpoints": [],
      "pubkey": ""
    }
  }
}
